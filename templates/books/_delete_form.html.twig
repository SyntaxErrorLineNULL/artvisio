<form method="post" action="{{ path('book_delete', {'id': book.id}) }}" onsubmit="return confirm('Вы уверены в этом?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ book.id) }}">
    <button class="flex justify-center py-2 m-2 bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded-full">Удилить</button>
</form>
